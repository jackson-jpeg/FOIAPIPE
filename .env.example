# ─── FOIAPIPE Backend Configuration ──────────────────────────────────────────
# Copy this file to .env and fill in the required values.

# ── Database ─────────────────────────────────────────────────────────────────
DATABASE_URL=postgresql+asyncpg://postgres:postgres@localhost:5432/foiapipe

# ── Redis / Celery ───────────────────────────────────────────────────────────
REDIS_URL=redis://localhost:6379/0

# ── Authentication (REQUIRED) ────────────────────────────────────────────────
SECRET_KEY=change-me-to-a-random-64-char-string
ADMIN_PASSWORD=change-me-to-a-strong-password

# ── JWT Settings ─────────────────────────────────────────────────────────────
JWT_ALGORITHM=HS256
JWT_EXPIRE_MINUTES=1440

# ── SMTP (outbound email for FOIA submissions) ──────────────────────────────
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
FROM_EMAIL=noreply@foiapipe.local

# ── IMAP (inbound email for agency responses) ───────────────────────────────
IMAP_HOST=
IMAP_PORT=993
IMAP_USER=
IMAP_PASSWORD=

# ── S3 / Object Storage (PDFs, videos) ──────────────────────────────────────
S3_ENDPOINT=
S3_ACCESS_KEY=
S3_SECRET_KEY=
S3_BUCKET_NAME=
S3_REGION=us-east-1

# ── YouTube Data API ─────────────────────────────────────────────────────────
YOUTUBE_CLIENT_ID=
YOUTUBE_CLIENT_SECRET=
YOUTUBE_REFRESH_TOKEN=

# ── Anthropic (Claude AI for article analysis) ──────────────────────────────
ANTHROPIC_API_KEY=

# ── Twilio (SMS notifications) ───────────────────────────────────────────────
TWILIO_ACCOUNT_SID=
TWILIO_AUTH_TOKEN=
TWILIO_FROM_NUMBER=
NOTIFICATION_PHONE=

# ── CORS ─────────────────────────────────────────────────────────────────────
# Comma-separated is NOT supported; use JSON array syntax
CORS_ORIGINS=["http://localhost:5173"]
